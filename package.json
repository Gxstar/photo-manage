{
  "name": "photo-manage",
  "version": "1.0.0",
  "description": "一个本地图像管理工具",
  "license": "ISC",
  "author": "GengXing",
  "type": "commonjs",
  "main": "src/main/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build:main": "electron-builder --dir",
    "build:renderer": "cd src/renderer && npm run build",
    "build:all": "npm run build:renderer && npm run build:main",
    "dev": "concurrently \"npm run start\" \"cd src/renderer && npm run dev\""
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@vitejs/plugin-vue": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.5",
    "vite": "^7.0.4"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "electron-store": "^10.1.0",
    "exif-parser": "^0.1.12",
    "pinia": "^3.0.3",
    "sharp": "^0.34.3",
    "sqlite3": "^5.1.7",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  }
}
